.container{
	 width:50%;
	 margin:auto;
	 text-align:center;
}

h1{
	 font-size:36px;
	 margin-top:50px;
}

form{
	margin-top:50px;
	text-align:left;
}

label{
	font-size:24px;
	display:block;
}
input [type ="text"]{
	width: 100%;
	padding: 12px 20px;
	margin: 8px 0;
	box-sizing: border-box;
	border: 2px solid #ccc;
	border-radius:  4px;
	font-size: 18px;
} 

button[type = "submit"]{
	background-color: #4CAF50;
	color: white;
	padding: 14px 20px;
	margin: 8px 0;
	border: none;
	border-radius: 4px;
	cursor: pointer;
	font-size: 18px;
}

button[type = "submit"]:hover{
	background-color: #45a049;
}